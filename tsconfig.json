{
  "include": [
    "node_modules/bc-stubs/bc/**/*.d.ts",
    "**/*.js",
    "**/*.ts",
  ],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "allowJs": false,
    "removeComments": true,
    "alwaysStrict": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": false,
    "noEmit": true,
    "baseUrl": "src",
    "outDir": "dist",
    "paths": {
      "@/*": [
        "*"
      ]
    }
  },
}