{
  "include": [
    "node_modules/bc-stubs/bc/**/*.d.ts",
    "src/*.ts",
    "src/*.tsx",
    "types.d.ts"
  ],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "allowJs": false,
    "removeComments": true,
    "alwaysStrict": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "rootDir": "src",
    "outDir": "dist/types",
    "paths": {
      "@/*": [
        "*"
      ]
    }
  },
}